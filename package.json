{
    "name": "@metreeca/tool",
    "version": "0.0.12",
    "description": "A model‑driven TypeScript/React framework for rapid REST/JSON‑LD frontend development.",
    "homepage": "https://github.com/metreeca/tool",
    "repository": "github:metreeca/tool",
    "bugs": {
        "url": "https://github.com/metreeca/tool/issues",
        "email": "info@metreeca.com"
    },
    "license": "Apache-2.0",
    "author": {
        "name": "Metreeca",
        "email": "info@metreeca.com",
        "url": "https://www.metreeca.com/"
    },
    "workspaces": [
        "code/*"
    ],
    "scripts": {
        "clean": "del dist docs/types docs/demo node_modules code/*/node_modules",
        "setup": "npm install --workspaces",
        "check": "jest",
        "build": "del dist && tsc && node package.js",
        "write": "typedoc && del docs/demo && npm run build --prefix demo",
        "issue": "npm run build && npm --prefix dist --workspaces publish --include-workspace-root --access public"
    },
    "devDependencies": {
        "@types/jest": "^29.5.12",
        "@types/node": "^20.11.26",
        "dedent": "^1.5.1",
        "del-cli": "^5.1.0",
        "glob": "^10.3.10",
        "jest": "^29.7.0",
        "ts-jest": "^29.1.2",
        "ts-node": "^10.9.2",
        "typedoc": "^0.25.12",
        "typescript": "^5.4.2"
    }
}
